{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "watch",
            "command": "tsc",
            "isShellCommand": true,
            "isBackground": true,
            "args": [
                "--noEmit",
                "-w"
            ],
            "problemMatcher": "$tsc-watch",
            "showOutput": "silent"
        },
        {
            "taskName": "dev",
            "command": "webpack-dev-server",
            "isShellCommand": true,
            "isBackground": true,
            "args": [
                "-d"
            ],
            "problemMatcher": {
                "owner": "webpack",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "\\((\\d+),(\\d+)\\):\\s+(.*)",
                        "line": 1,
                        "column": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^webpack: Compiling\\.\\.\\.$",
                    "endsPattern": "^webpack: (Compiled successfully\\.)|(Failed to compile\\.)$"
                }
            },
            "showOutput": "silent"
        }
    ]
}